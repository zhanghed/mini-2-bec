.a {
	width: 100vw;
	/* height: 100vh; */
	overflow-y: auto;
}

/* 滚动主体 */
scroll-view {
	width: 100%;
	height: 100vh;
}

::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}

.main {
	width: 100vw;
	/* height: 100vh; */
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
	align-items: center;
	font-size: 30rpx;
}

.main-i {
	width: 85%;
	padding: 20rpx;
	margin: 20rpx;
	position: relative;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
	background-color: rgba(255, 251, 240, 0.185);
	border: 4rpx solid #cfcdcd77;
	box-shadow: 10rpx 10rpx 10rpx #cfcfcf77;
}

.top {
	width: 100%;
	margin: 20rpx 0;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: flex-start;
	align-items: center;
}

.bot {
	width: 100%;
	height: 150rpx;
	/* margin: 20rpx 0; */
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	justify-content: flex-end;
	align-items: center;
	text-align: center;
}

.bot-i {
	width: 100%;
	height: 100rpx;
	/* margin: 20rpx 0; */
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
	align-items: flex-end;
	text-align: center;
	font-size: 18rpx;
}

.bot-i-main {
	width: 8%;
	background-color: #d2f1f1;
}

.bot-i-count {
	position: relative;
	top: -22rpx;
}

.bot-bottom {
	width: 100%;
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-around;
	align-items: flex-end;
	text-align: center;
	font-size: 20rpx;
}

.bot-bottom>view {
	width: 8%;
	text-align: center;
}

.close {
	position: absolute;
	right: 10px;
	top: 10px;
}