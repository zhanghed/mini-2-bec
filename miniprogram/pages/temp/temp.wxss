.a {
	width: 100vw;
	/* height: 100vh; */
	overflow-y: auto;
}

/* 滚动主体 */
scroll-view {
	width: 100%;
	height: 100vh;
}

::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}

.main {
	width: 100vw;
	/* height: 100vh; */
	display: flex;
	flex-direction: column;
	flex-wrap: nowrap;
	justify-content: flex-start;
	align-items: center;
	font-size: 30rpx;
}

.main-i {
	width: 85%;
	padding: 20rpx;
	margin: 20rpx;
	position: relative;
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	justify-content: center;
	align-items: center;
	background-color: rgba(255, 251, 240, 0.185);
	border: 4rpx solid #cfcdcd77;
	box-shadow: 10rpx 10rpx 10rpx #cfcfcf77;
}